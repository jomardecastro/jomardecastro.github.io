Options +FollowSymLinks
RewriteEngine On
RewriteRule ^$ /index.php [L]

RewriteRule ^index\.php$ - [L]

# redirect pages
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/pages/$1.php -f
RewriteRule ^([^/]+)/?$ /pages/$1.php [L]

# redirect if 404
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.php [L]